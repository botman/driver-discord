{
    "name": "botman/driver-discord",
    "license": "MIT",
    "description": "Discord driver for BotMan",
    "keywords": [
        "Bot",
        "BotMan",
        "Discord"
    ],
    "homepage": "http://github.com/botman/driver-discord",
    "authors": [{
        "name": "Marcel Pociot",
        "email": "m.pociot@gmail.com"
    }],
    "require": {
        "php": ">=7.0",
        "botman/botman": "~2.0",
        "team-reflex/discord-php": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.0",
        "mockery/mockery": "^1.1",
        "ext-curl": "*"
    },
    "autoload": {
        "psr-4": {
            "BotMan\\Drivers\\Discord\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "cs": "php-cs-fixer fix"
    }
}